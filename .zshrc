autoload -Uz vcs_info
#promptinit
#prompt redhat
zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:*' formats "(%b)"
precmd() { vcs_info }
setopt prompt_subst

PROMPT='%~ %B%(!.#.$)%b '
RPROMPT='%B$vcs_info_msg_0_%b'

# Aliases
alias ls="ls --color"

